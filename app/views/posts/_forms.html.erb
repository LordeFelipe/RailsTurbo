<%= form_with model: post, url: :posts, method: :post, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :name, class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="flex items-center justify-center">
    <%= f.submit "Create Post", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>